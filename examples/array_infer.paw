// 测试数组大小推导

fn main() -> i32 {
    // 旧语法（显式大小）
    let arr1: [i32; 5] = [1, 2, 3, 4, 5];
    
    // 新语法（推导大小）⭐
    let arr2: [i32] = [10, 20, 30];
    let arr3: [i32] = [100, 200, 300, 400];
    
    // 混合使用
    let x: i32 = arr1[0] + arr2[1] + arr3[2];
    
    return x;  // 1 + 20 + 300 = 321
}

