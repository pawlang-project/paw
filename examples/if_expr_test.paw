// 测试if表达式功能

fn test_basic() -> i32 {
    let x: i32 = 10;
    let y: i32 = 20;
    let max: i32 = if x > y { x } else { y };
    return max;  // 20
}

fn test_nested() -> i32 {
    let a: i32 = 5;
    let b: i32 = 15;
    let c: i32 = 10;
    let max: i32 = if a > b {
        a
    } else {
        if b > c { b } else { c }
    };
    return max;  // 15
}

fn test_in_arithmetic() -> i32 {
    let x: i32 = 5;
    let y: i32 = 3;
    let result: i32 = (if x > y { x } else { y }) * 2;
    return result;  // (5 * 2) = 10
}

fn main() -> i32 {
    let r1: i32 = test_basic();      // 20
    let r2: i32 = test_nested();     // 15
    let r3: i32 = test_in_arithmetic();  // 10
    return r1 + r2 + r3;  // 20 + 15 + 10 = 45
}

