// --------- for / sum_to ----------
fn sum_to(n: Int) -> Int {
  let s: Int = 0;
  for (let i: Int = 1; i <= n; i = i + 1) {
    // s += i
    s = s + i;
  }
  return s;
}

// --------- for / break ----------
fn first_i_sq_ge(th: Int) -> Int {
  let i: Int = 0;
  for (i = 0; i < 100; i = i + 1) {
    if ((i * i) >= th) { break; }
  }
  return i;
}

// --------- for / continue ----------
fn sum_skip_five() -> Int {
  let s: Int = 0;
  for (let i: Int = 0; i < 10; i = i + 1) {
    if (i == 5) { continue; }
    s = s + i;
  }
  return s; // 45 - 5 = 40
}

// --------- while ----------
fn fact_while(n: Int) -> Int {
  let i: Int = 1;
  let acc: Int = 1;
  while (i <= n) {
    acc = acc + 0;      // no-opï¼Œæ¼”ç¤ºå¯å†™
    acc = acc * i;
    i = i + 1;
  }
  return acc;
}

