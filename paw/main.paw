// --------- match / int ----------
fn match_int(x: Int) -> Int {
  match (x) {
    0 => { 100 },
    1 => { 200 },
    _ => { 999 }
  }
}

// --------- match / bool ----------
fn match_bool(b: Bool) -> Int {
  match (b) {
    true => { 1 },
    false => { 0 }
  }
}

